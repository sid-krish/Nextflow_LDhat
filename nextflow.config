process {

    executor = 'pbs'
    scratch = true
    cpus  = 4
    memory = 24.GB
    time = 4.h

    withName:PREPEND_FILENAME {
        container = 'sidkris/mprr:latest'
    }

    withName:FREEBAYES {
        container = 'quay.io/biocontainers/freebayes:1.3.5--py38ha193a2f_3'
    }

    withName:VCF_TO_FASTA {
        container = 'quay.io/biocontainers/vcflib:1.0.2--h3198e80_5'
    }

    withName:UPDATE_HEADER {
        container = 'sidkris/mprr:latest'
    }
}

docker {
    enabled = false
}

singularity {
    enabled = true
}